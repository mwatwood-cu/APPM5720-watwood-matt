#
# Makefile for  timing examples
#

CXX = g++
LD  = g++

CXXINCLUDE = -I../darray
CXXFLAGS = -O3

OBJECTS = test2D.o
EXEC = ex.x	

.PHONY: clean

$(EXEC): link $(OBJECTS)
	$(LD) $(OBJECTS) $(LDFLAGS) -o $(EXEC)

link:
ifneq (,$(findstring DBZ_DEBUG,$(CXXFLAGS)))
	$(eval LDFLAGS := -L../darray -ld1array_dbg -ld2array_dbg)
	echo $(LDFLAGS)
else
	$(eval LDFLAGS := -L../darray -ld1array -ld2array)
	echo $(LDFLAGS)
endif		

%.o : %.cpp
	$(CXX) $(CXXFLAGS) $(CXXINCLUDE) -c $<

clean:
	rm -f $(OBJECTS) $(EXEC) 
